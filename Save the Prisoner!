#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t; if (!(cin >> t)) return 0;
    while (t--) {
        long long n, m, s; cin >> n >> m >> s;
        long long res = (s + m - 1) % n;
        if (res == 0) res = n;
        cout << res << '\n';
    }
    return 0;
}
