#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        int n = s.size();
        if (n % 2) {
            cout << -1 << "\n";
            continue;
        }
        string a = s.substr(0, n/2), b = s.substr(n/2);
        vector<int> freq(26, 0);
        for (char c : a) freq[c - 'a']++;
        for (char c : b) freq[c - 'a']--;
        int changes = 0;
        for (int x : freq) if (x > 0) changes += x;
        cout << changes << "\n";
    }
    return 0;
}
