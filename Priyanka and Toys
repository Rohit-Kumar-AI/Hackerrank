#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> toys(n);
    for (int i = 0; i < n; i++) cin >> toys[i];
    sort(toys.begin(), toys.end());
    int count = 0, i = 0;
    while (i < n) {
        int range = toys[i] + 4;
        count++;
        while (i < n && toys[i] <= range) i++;
    }
    cout << count << endl;
    return 0;
}
